<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="120dp"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    >
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="12月16日"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xihuan_cang"
            android:padding="5dp"
            android:background="@drawable/xihuan_shape"
            />
        <ImageView
            android:id="@+id/red_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xihuan_xin"
            android:padding="5dp"
            android:background="@drawable/xihuan_shape"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_movie2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:background="@drawable/ic_empty_cute_girl_box"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginTop="8dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="长城"
        android:textColor="#000000"
        android:textSize="15sp"
        android:lines="1"
        />
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"

            android:text="181812"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="12sp"

            android:text="人想看"/>
    </LinearLayout>
</LinearLayout>