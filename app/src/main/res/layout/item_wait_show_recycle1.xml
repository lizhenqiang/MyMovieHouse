<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d53e37"
        >

        <TextView
            android:id="@+id/hotshow_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"

            android:gravity="center"
            android:text="找影视剧、影人、影院"
            android:textColor="#e6e6e6"
            android:textSize="15sp"
            android:drawableLeft="@drawable/jo"
            android:background="@drawable/hotshow_textview_shape"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="5dp"
            android:id="@+id/tv_yugao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8e8e8"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="预告片推荐"
            />
    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/rv_wait_show_recycle1"

    ></android.support.v7.widget.RecyclerView>

</LinearLayout>