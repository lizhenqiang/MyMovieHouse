<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/hot_show_headview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d53e37"
        >

        <TextView
            android:id="@+id/hotshow_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"

            android:gravity="center"
            android:text="找影视剧、影人、影院"
            android:textColor="#e6e6e6"
            android:textSize="15sp"
            android:drawableLeft="@drawable/jo"
            android:background="@drawable/hotshow_textview_shape"
            />

    </LinearLayout>

    <com.youth.banner.Banner
        android:id="@+id/hot_show_banner"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:indicator_height="5dp"
        app:indicator_width="5dp"
        app:is_auto_play="true" />
</LinearLayout>