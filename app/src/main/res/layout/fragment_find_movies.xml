        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/grid1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                >
                <LinearLayout

                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView

                        android:text="热映口碑"
                        android:textSize="16sp"
                        android:id="@+id/tv_topic1"
                        android:textColor="#5bbff3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:lines="1"
                        android:layout_marginTop="5dp"
                        android:text="你的名字"
                        android:textSize="12sp"
                        android:id="@+id/tv_name1"
                        android:textColor="#999999"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_src1"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:id="@+id/iv_bg1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dd999999"
                ></View>



            <RelativeLayout

                android:id="@+id/grid2"
                android:layout_weight="1"
                 android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                >
                <LinearLayout

                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView

                        android:text="最受期待"
                        android:textSize="16sp"
                        android:id="@+id/tv_topic2"
                        android:textColor="#f47062"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:lines="1"
                        android:layout_marginTop="5dp"
                        android:text="你的名字"
                        android:textSize="12sp"
                        android:id="@+id/tv_name2"
                        android:textColor="#999999"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_src2"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:id="@+id/iv_bg2"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dd999999"></View>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/grid3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                >
                <LinearLayout

                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView

                        android:text="海外电影"
                        android:textSize="16sp"
                        android:id="@+id/tv_topic3"
                        android:textColor="#f68234"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:lines="1"
                        android:layout_marginTop="5dp"
                        android:text="你的名字"
                        android:textSize="12sp"
                        android:id="@+id/tv_name3"
                        android:textColor="#999999"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_src3"
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:background="#00000000"
                    android:id="@+id/iv_bg3"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dd999999"
                ></View>

            <RelativeLayout
                android:id="@+id/grid4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                >
                <LinearLayout

                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView

                        android:text="Top100"
                        android:textSize="16sp"
                        android:id="@+id/tv_topic4"
                        android:textColor="#84c846"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:lines="1"
                        android:layout_marginTop="5dp"
                        android:text="你的名字"
                        android:textSize="12sp"
                        android:id="@+id/tv_name4"
                        android:textColor="#999999"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_src4"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
